<%= error_messages_for 'color' %>

<h2>
  <% if color.new_record? %>
    <%= l('timelines.new_color') %>:
  <% else %>
    <%= l('timelines.edit_color') %>:
  <% end %>

  <label for="color_name" class="hidden-for-sighted">
    <%= PlanningElementTypeColor.human_attribute_name(:name) %>
  </label>
  <%= f.text_field :name %>
</h2>

<fieldset class="timelines-color-properties">
  <legend><%= l('timelines.properties') %></legend>

  <p>
    <label for="color_hexcode">
      <%= PlanningElementTypeColor.human_attribute_name(:hexcode) %>
    </label>
    <%= icon_for_color(color, :class => 'timelines-x-update-color') %>
    <%= f.text_field :hexcode %>
  </p>
</fieldset>

<%= submit_tag l(:button_save) %>
<%= link_to l(:button_cancel), colors_path %>
