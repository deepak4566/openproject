<% if @related_page %>
  <% breadcrumb_for_page(@related_page, l(:label_table_of_contents)) %>
<% else %>
  <% breadcrumb_paths(l(:label_table_of_contents)) %>
<% end %>

<% html_title l(:label_wiki_toc) %>
<%= content_header title: l(:label_index_by_title), scrollable: true do |h| %>
  <%= h.toolbar do |t| %>
    <%= t.watch_button @wiki, User.current %>
    <% unless @pages.empty? %>
      <%= t.button 'Atom', project_activities_path(@project, format: :atom, show_wiki_edits: 1, key: User.current.rss_key), icon: :'page-atom', if: Setting.feeds_enabled? %>
      <%= t.button 'HTML', export_project_wiki_index_path(@project, format: :html), icon: :publish, if: User.current.allowed_to?(:export_wiki_pages, @project) %>
    <% end %>
  <% end %>
<% end %>
<% if @pages.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% end %>
<%= render_page_hierarchy(@pages_by_parent_id, nil, :timestamp => true) %>
<% content_for :sidebar do %>
  <%= render :partial => 'sidebar' %>
<% end %>
<% content_for :header_tags do %>
  <%= auto_discovery_link_tag(:atom, :controller => '/activities', :action => 'index', :id => @project, :show_wiki_edits => 1, :format => 'atom', :key => User.current.rss_key) %>
<% end %>
