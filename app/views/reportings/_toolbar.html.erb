<%= content_header(title: l("timelines.reporting_for_project.show",
              :title => link_to_project(@reporting.reporting_to_project))) do |h| %>
    <% if show_actions %>
      <%= h.toolbar do |t| %>
        <%= t.button l(:button_edit), edit_project_reporting_path(@project, @reporting), icon: :edit, accesskey: :edit, if: authorize_for(:reportings, :edit) %>
        <%= t.button l(:button_delete), confirm_destroy_project_reporting_path(@project, @reporting), icon: :delete, if: authorize_for(:reportings, :destroy) %>
      <% end %>
    <% end %>
<% end %>
