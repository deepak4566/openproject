<%=
  component_wrapper do
    if journal.notes.present? || (journal.details.any? && !journal.initial?)
      flex_layout do |journal_container|
        if journal.notes.present?
          journal_container.with_row do
            render(Primer::Box.new(mt: 1)) do
              format_text(journal, :notes)
            end
          end
          journal_container.with_row(mt: 3, flex_layout: true) do |reactions_container|
            reactions_container.with_column do
              render(WorkPackages::ActivitiesTab::Journals::ItemComponent::AddReactions.new(journal:))
            end
            reactions_container.with_column do
              render(WorkPackages::ActivitiesTab::Journals::ItemComponent::Reactions.new(journal:))
            end
          end
        end
      end
    end
  end
%>
