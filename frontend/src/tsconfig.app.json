{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node", "react", "styled-components", "jest"],
    "jsx" : "react-jsx"
  },
  "files": [
    "main.ts",
    "polyfills.ts",
    "app/core/setup/init-globals.ts",
    "app/core/setup/init-vendors.ts",
    "stimulus/setup.ts"
  ],
  "include": [
    "src/**/*.ts",
    "stimulus/**/*.ts",
    "stimulus/**/*.tsx",
    "**/*.d.ts",
  ],
  "exclude": [
    "**/*.stories.*"
  ]
}
